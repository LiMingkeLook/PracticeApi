<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.teacher.ManagementCourseActivity">
    <TextView
        android:id="@+id/activity_management_course_tv_name"
        android:text="课程名"
        android:padding="20dp"
        android:textColor="#3944A5"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <Button
        android:id="@+id/activity_management_course_bt_manageStudents"
        android:text="审批学生"
        android:layout_width="0dp"
        android:layout_margin="30dp"
        android:layout_weight="1"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/activity_management_course_bt_managePractices"
        android:text="章节管理"
        android:layout_width="0dp"
        android:layout_margin="30dp"
        android:layout_weight="1"
        android:layout_height="wrap_content" />
</LinearLayout>
</LinearLayout>