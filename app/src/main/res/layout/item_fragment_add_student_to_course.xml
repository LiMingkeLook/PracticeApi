<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/item_fragment_add_student_to_course_img_studentImg"
            android:layout_width="20dp"
            android:layout_height="20dp" />
        <TextView
            android:id="@+id/item_fragment_add_student_to_course_tv_studentId"
            android:text="20170313007"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/item_fragment_add_student_to_course_tv_studentName"
            android:text="name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="0dp"/>
        <CheckBox
            android:id="@+id/item_fragment_add_student_to_course_cb"
            android:text="未授权"
            android:textColor="#CA1919"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>