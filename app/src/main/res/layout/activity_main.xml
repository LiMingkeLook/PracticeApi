<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".activities.StudentActivity">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="#19FF00E7"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:textStyle="bold"
            android:textColor="#FC00DA"
            android:text="选择Api接口："
            android:gravity="center"
            android:layout_marginEnd="10dp"
            android:layout_width="wrap_content"
            android:layout_height="30dp" />
        <TextView
            android:id="@+id/activity_main_tv_api"
            android:background="@drawable/dot_style"
            android:textColor="#FF0000"
            android:gravity="center"
            android:textStyle="bold"
            android:text="111"
            android:layout_width="match_parent"
            android:layout_height="30dp" />
    </LinearLayout>
    <net.lzzy.practiceapi.utils.StaticViewPager
        android:id="@+id/activity_main_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </net.lzzy.practiceapi.utils.StaticViewPager>
</LinearLayout>